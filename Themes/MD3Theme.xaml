<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- MD3 Color Tokens -->
    <Color x:Key="MD3Primary">#6750A4</Color>
    <Color x:Key="MD3OnPrimary">#FFFFFF</Color>
    <Color x:Key="MD3PrimaryContainer">#E9DDFF</Color>
    <Color x:Key="MD3OnPrimaryContainer">#21005D</Color>

    <Color x:Key="MD3Secondary">#625B71</Color>
    <Color x:Key="MD3OnSecondary">#FFFFFF</Color>
    <Color x:Key="MD3SecondaryContainer">#E8DEF8</Color>
    <Color x:Key="MD3OnSecondaryContainer">#1E192B</Color>

    <Color x:Key="MD3Tertiary">#7E5260</Color>
    <Color x:Key="MD3OnTertiary">#FFFFFF</Color>
    <Color x:Key="MD3TertiaryContainer">#FFD9E3</Color>
    <Color x:Key="MD3OnTertiaryContainer">#370B1E</Color>

    <Color x:Key="MD3Error">#BA1A1A</Color>
    <Color x:Key="MD3OnError">#FFFFFF</Color>
    <Color x:Key="MD3ErrorContainer">#FFDAD6</Color>
    <Color x:Key="MD3OnErrorContainer">#410002</Color>

    <Color x:Key="MD3Surface">#FEF7FF</Color>
    <Color x:Key="MD3OnSurface">#1D1B20</Color>
    <Color x:Key="MD3SurfaceVariant">#E7E0EC</Color>
    <Color x:Key="MD3OnSurfaceVariant">#49454F</Color>

    <Color x:Key="MD3Outline">#7A757F</Color>
    <Color x:Key="MD3OutlineVariant">#CAC4D0</Color>
    <Color x:Key="MD3Background">#FEF7FF</Color>
    <Color x:Key="MD3OnBackground">#1D1B20</Color>

    <!-- MD3 Dark Theme Colors (for theme switching) -->
    <Color x:Key="MD3PrimaryDark">#D0BCFF</Color>
    <Color x:Key="MD3OnPrimaryDark">#371E73</Color>
    <Color x:Key="MD3PrimaryContainerDark">#4F378B</Color>
    <Color x:Key="MD3OnPrimaryContainerDark">#EADDFF</Color>

    <Color x:Key="MD3SurfaceDark">#141218</Color>
    <Color x:Key="MD3OnSurfaceDark">#E6E0E9</Color>
    <Color x:Key="MD3BackgroundDark">#141218</Color>
    <Color x:Key="MD3OnBackgroundDark">#E6E0E9</Color>

    <!-- MD3 Brushes -->
    <SolidColorBrush x:Key="MD3PrimaryBrush" Color="{StaticResource MD3Primary}" />
    <SolidColorBrush x:Key="MD3OnPrimaryBrush" Color="{StaticResource MD3OnPrimary}" />
    <SolidColorBrush x:Key="MD3PrimaryContainerBrush" Color="{StaticResource MD3PrimaryContainer}" />
    <SolidColorBrush x:Key="MD3OnPrimaryContainerBrush" Color="{StaticResource MD3OnPrimaryContainer}" />

    <SolidColorBrush x:Key="MD3SecondaryBrush" Color="{StaticResource MD3Secondary}" />
    <SolidColorBrush x:Key="MD3OnSecondaryBrush" Color="{StaticResource MD3OnSecondary}" />
    <SolidColorBrush x:Key="MD3SecondaryContainerBrush" Color="{StaticResource MD3SecondaryContainer}" />
    <SolidColorBrush x:Key="MD3OnSecondaryContainerBrush" Color="{StaticResource MD3OnSecondaryContainer}" />

    <SolidColorBrush x:Key="MD3TertiaryBrush" Color="{StaticResource MD3Tertiary}" />
    <SolidColorBrush x:Key="MD3OnTertiaryBrush" Color="{StaticResource MD3OnTertiary}" />
    <SolidColorBrush x:Key="MD3TertiaryContainerBrush" Color="{StaticResource MD3TertiaryContainer}" />
    <SolidColorBrush x:Key="MD3OnTertiaryContainerBrush" Color="{StaticResource MD3OnTertiaryContainer}" />

    <SolidColorBrush x:Key="MD3ErrorBrush" Color="{StaticResource MD3Error}" />
    <SolidColorBrush x:Key="MD3OnErrorBrush" Color="{StaticResource MD3OnError}" />
    <SolidColorBrush x:Key="MD3ErrorContainerBrush" Color="{StaticResource MD3ErrorContainer}" />
    <SolidColorBrush x:Key="MD3OnErrorContainerBrush" Color="{StaticResource MD3OnErrorContainer}" />

    <SolidColorBrush x:Key="MD3SurfaceBrush" Color="{StaticResource MD3Surface}" />
    <SolidColorBrush x:Key="MD3OnSurfaceBrush" Color="{StaticResource MD3OnSurface}" />
    <SolidColorBrush x:Key="MD3SurfaceVariantBrush" Color="{StaticResource MD3SurfaceVariant}" />
    <SolidColorBrush x:Key="MD3OnSurfaceVariantBrush" Color="{StaticResource MD3OnSurfaceVariant}" />

    <SolidColorBrush x:Key="MD3OutlineBrush" Color="{StaticResource MD3Outline}" />
    <SolidColorBrush x:Key="MD3OutlineVariantBrush" Color="{StaticResource MD3OutlineVariant}" />
    <SolidColorBrush x:Key="MD3BackgroundBrush" Color="{StaticResource MD3Background}" />
    <SolidColorBrush x:Key="MD3OnBackgroundBrush" Color="{StaticResource MD3OnBackground}" />

    <!-- MD3 Component Templates -->

    <!-- MD3 ComboBox Toggle Button Template -->
    <ControlTemplate x:Key="MD3ComboBoxToggleButtonTemplate" TargetType="ToggleButton">
        <Border Background="Transparent" BorderThickness="0" />
    </ControlTemplate>

    <!-- MD3 ScrollBar Thumb Template -->
    <ControlTemplate x:Key="MD3ScrollBarThumbTemplate" TargetType="Thumb">
        <Border Background="{TemplateBinding Background}"
                CornerRadius="6"
                Opacity="0.5">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             To="0.8" Duration="0:0:0.2" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             To="1.0" Duration="0:0:0.1" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Border>
    </ControlTemplate>

    <!-- MD3 Component Styles -->

    <!-- MD3 Button Styles -->
    <Style x:Key="MD3FilledButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="{StaticResource MD3PrimaryBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MD3OnPrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="24,10" />
        <Setter Property="Height" Value="40" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="20" />
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource MD3OnSurfaceVariantBrush}" />
                <Setter Property="Foreground" Value="{StaticResource MD3SurfaceVariantBrush}" />
                <Setter Property="Opacity" Value="0.12" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="MD3OutlinedButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource MD3PrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource MD3OutlineBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="24,10" />
        <Setter Property="Height" Value="40" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="20" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource MD3PrimaryContainerBrush}" />
                <Setter Property="Foreground" Value="{StaticResource MD3OnPrimaryContainerBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource MD3PrimaryBrush}" />
                <Setter Property="Foreground" Value="{StaticResource MD3OnPrimaryBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="BorderBrush" Value="{StaticResource MD3OnSurfaceVariantBrush}" />
                <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceVariantBrush}" />
                <Setter Property="Opacity" Value="0.38" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="MD3TextButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource MD3PrimaryBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="Height" Value="40" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="20" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource MD3PrimaryContainerBrush}" />
                <Setter Property="Foreground" Value="{StaticResource MD3OnPrimaryContainerBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource MD3PrimaryBrush}" />
                <Setter Property="Foreground" Value="{StaticResource MD3OnPrimaryBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceVariantBrush}" />
                <Setter Property="Opacity" Value="0.38" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- MD3 Card Styles -->
    <Style x:Key="MD3Card" TargetType="materialDesign:Card">
        <Setter Property="Background" Value="{StaticResource MD3SurfaceBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceBrush}" />
        <Setter Property="UniformCornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,0,0,16" />
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1" />
        <Setter Property="BorderThickness" Value="0" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="MD3ElevatedCard" TargetType="materialDesign:Card" BasedOn="{StaticResource MD3Card}">
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp3" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="MD3OutlinedCard" TargetType="materialDesign:Card" BasedOn="{StaticResource MD3Card}">
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0" />
        <Setter Property="BorderBrush" Value="{StaticResource MD3OutlineVariantBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- MD3 Text Field -->
    <Style x:Key="MD3TextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Background" Value="{StaticResource MD3SurfaceBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource MD3OutlineBrush}" />
        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="{StaticResource MD3PrimaryBrush}" />
        <Setter Property="materialDesign:TextFieldAssist.TextBoxViewMargin" Value="16,8,16,8" />

        <Setter Property="FontSize" Value="16" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource MD3PrimaryBrush}" />
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource MD3PrimaryBrush}" />
                <Setter Property="BorderThickness" Value="2" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource MD3SurfaceVariantBrush}" />
                <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceVariantBrush}" />
                <Setter Property="Opacity" Value="0.38" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- MD3 ComboBox Item Style -->
    <Style x:Key="MD3ComboBoxItem" TargetType="ComboBoxItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="MinHeight" Value="48" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="ItemBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}"
                            Margin="8,2"
                            SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                          ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background"
                                    Value="{StaticResource MD3SecondaryContainerBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource MD3OnSecondaryContainerBrush}" />
                        </Trigger>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background"
                                    Value="{StaticResource MD3SecondaryContainerBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource MD3OnSecondaryContainerBrush}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background"
                                    Value="{StaticResource MD3PrimaryContainerBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource MD3OnPrimaryContainerBrush}" />
                            <Setter Property="FontWeight" Value="Medium" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="IsHighlighted" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="ItemBorder" Property="Background"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource MD3OnPrimaryBrush}" />
                        </MultiTrigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceVariantBrush}" />
                            <Setter TargetName="ItemBorder" Property="Opacity" Value="0.38" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- MD3 ComboBox -->
    <Style x:Key="MD3ComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource MD3SurfaceBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource MD3OutlineBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Height" Value="56" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource MD3ComboBoxItem}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <!-- Main Border -->
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Content Area -->
                                <ContentPresenter x:Name="ContentSite"
                                                  Grid.Column="0"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                  ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Margin="{TemplateBinding Padding}"
                                                  IsHitTestVisible="False"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                                <!-- Drop Down Arrow -->
                                <materialDesign:PackIcon x:Name="DropDownArrow"
                                                         Grid.Column="1"
                                                         Kind="ChevronDown"
                                                         Width="24"
                                                         Height="24"
                                                         Margin="8,0,16,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource MD3OnSurfaceVariantBrush}"
                                                         IsHitTestVisible="False" />
                            </Grid>
                        </Border>

                        <!-- Invisible Toggle Button -->
                        <ToggleButton x:Name="ToggleButton"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      Focusable="False"
                                      ClickMode="Press" />

                        <!-- Popup -->
                        <Popup x:Name="PART_Popup"
                               AllowsTransparency="True"
                               IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               Placement="Bottom"
                               PopupAnimation="Slide"
                               StaysOpen="False"
                               PlacementTarget="{Binding ElementName=MainBorder}">
                            <Grid MinWidth="{TemplateBinding ActualWidth}"
                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                <!-- Drop Down Container -->
                                <Border x:Name="DropDownBorder"
                                        Background="{StaticResource MD3SurfaceBrush}"
                                        BorderBrush="{StaticResource MD3OutlineVariantBrush}"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Margin="0,4,0,0"
                                        Padding="0,8"
                                        materialDesign:ElevationAssist.Elevation="Dp8">
                                    <ScrollViewer x:Name="DropDownScrollViewer"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Padding="0"
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <ItemsPresenter x:Name="ItemsPresenter"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                            <Setter TargetName="DropDownArrow" Property="Foreground"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                            <Setter TargetName="MainBorder" Property="BorderThickness" Value="2" />
                            <Setter TargetName="DropDownArrow" Property="Foreground"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                            <Setter TargetName="MainBorder" Property="BorderThickness" Value="2" />
                            <Setter TargetName="DropDownArrow" Property="Foreground"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{StaticResource MD3SurfaceVariantBrush}" />
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource MD3OutlineVariantBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceVariantBrush}" />
                            <Setter TargetName="DropDownArrow" Property="Foreground"
                                    Value="{StaticResource MD3OnSurfaceVariantBrush}" />
                            <Setter TargetName="MainBorder" Property="Opacity" Value="0.38" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- MD3 可编辑ComboBox样式 -->
    <Style x:Key="MD3EditableComboBox" TargetType="ComboBox" BasedOn="{StaticResource MD3ComboBox}">
        <Setter Property="IsEditable" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <!-- Main Border -->
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Editable TextBox -->
                                <TextBox x:Name="PART_EditableTextBox"
                                         Grid.Column="0"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="{TemplateBinding Padding}"
                                         FontSize="{TemplateBinding FontSize}"
                                         FontWeight="{TemplateBinding FontWeight}"
                                         Foreground="{TemplateBinding Foreground}"
                                         HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                         VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                         IsReadOnly="{Binding IsReadOnly, RelativeSource={RelativeSource TemplatedParent}}"
                                         Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" />

                                <!-- Drop Down Arrow -->
                                <materialDesign:PackIcon x:Name="DropDownArrow"
                                                         Grid.Column="1"
                                                         Kind="ChevronDown"
                                                         Width="24"
                                                         Height="24"
                                                         Margin="8,0,16,0"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource MD3OnSurfaceVariantBrush}"
                                                         IsHitTestVisible="False" />
                            </Grid>
                        </Border>

                        <!-- Invisible Toggle Button -->
                        <ToggleButton x:Name="ToggleButton"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      Focusable="False"
                                      ClickMode="Press" />

                        <!-- Popup -->
                        <Popup x:Name="PART_Popup"
                               AllowsTransparency="True"
                               IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               Placement="Bottom"
                               PopupAnimation="Slide"
                               StaysOpen="False"
                               PlacementTarget="{Binding ElementName=MainBorder}">
                            <Grid MinWidth="{TemplateBinding ActualWidth}"
                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                <Border x:Name="DropDownBorder"
                                        Background="{StaticResource MD3SurfaceBrush}"
                                        BorderBrush="{StaticResource MD3OutlineVariantBrush}"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Margin="0,4,0,0"
                                        Padding="0,8"
                                        materialDesign:ElevationAssist.Elevation="Dp8">
                                    <ScrollViewer x:Name="DropDownScrollViewer"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Padding="0"
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <ItemsPresenter x:Name="ItemsPresenter"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                            <Setter TargetName="DropDownArrow" Property="Foreground"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                            <Setter TargetName="MainBorder" Property="BorderThickness" Value="2" />
                            <Setter TargetName="DropDownArrow" Property="Foreground"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                            <Setter TargetName="MainBorder" Property="BorderThickness" Value="2" />
                            <Setter TargetName="DropDownArrow" Property="Foreground"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                            <Setter TargetName="MainBorder" Property="BorderThickness" Value="2" />
                            <Setter TargetName="DropDownArrow" Property="Foreground"
                                    Value="{StaticResource MD3PrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="MainBorder" Property="Background"
                                    Value="{StaticResource MD3SurfaceVariantBrush}" />
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{StaticResource MD3OutlineVariantBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource MD3OnSurfaceVariantBrush}" />
                            <Setter TargetName="DropDownArrow" Property="Foreground"
                                    Value="{StaticResource MD3OnSurfaceVariantBrush}" />
